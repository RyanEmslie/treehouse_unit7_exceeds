extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= title
        

        //- Use interploation to dynamically add the project description.
        p.lead.text-light= description
          

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 technologies


        ul
          each tech in technologies
            li= tech

        //- Data pulled from the data.json.
        a.button.expanded.live(href=live_link) Live Demo
        a.button.expanded.github(href=github_link) GitHub Repo
    
    each val in image_urls
      img.image(src="/images/" + val)
    
    