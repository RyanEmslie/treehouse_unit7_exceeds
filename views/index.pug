extends layout.pug


mixin projectCell(id, imageUrl, title)
    .cell
        a(href='http://localhost:3000/project/' + id + '')
          img(src="/images/" + imageUrl)
          h5= title



block content 
  article.grid-container.portfolio-intro
    div
      
      h1 My Portfolio
 
      p.lead.text-light
        | This is my portfolio so far...
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

     
      each project in jsonData
        +projectCell(project.id, project.image_urls[0], project.project_name)
      



     
        
